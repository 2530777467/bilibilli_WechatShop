/* pages/user/user.wxss */
page{
  background-color: #E6E6E6;
}

.user_info_wrap{
  position: relative;
  height: 45vh;
  overflow: hidden;
  background-color: var(--themeColor);
}

.user_info_wrap .user_btn{
  position: absolute;
  left: 50%;
  top: 40%;
  transform: translateX(-50%);
  border: 3rpx solid #ffffff;
  color: #ffffff;
  font-size: 38rpx;
  padding: 20rpx 60rpx;
  border-radius: 10%;
}

.user_info_wrap .user_img_wrap {
  position: relative;
}

.user_info_wrap .user_img_wrap .user_bg{
  height: 45vh;
  /* 高斯模糊 */
  filter: blur(10rpx);
}

.user_info_wrap .user_img_wrap .user_info{
  position: absolute;
  left: 50%;
  top: 30%;
  transform: translateX(-50%);
  text-align: center;
}

.user_info_wrap .user_img_wrap .user_info .user_icon{
  border-radius: 25%;
  width: 140rpx;
  height: 140rpx;
  border: 1rpx solid #ffffff;
}

.user_info_wrap .user_img_wrap .user_info .user_name{
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #ffffff;
}

.user_content{
  position: relative;
  color: #666666;
}

.user_content .user_main{
  padding-bottom: 60rpx;
  position: absolute;
  width: 92%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
}

.user_content .user_main .history_wrap{
  background-color: #fff;
  display: flex;
}

.user_content .user_main .history_wrap navigator{
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}

.user_content .user_main .history_wrap navigator .his_num{
  color: var(--themeColor);
}

.user_content .user_main .orders_wrap{
  background-color: #fff;
  margin-top: 30rpx;
}

.user_content .user_main .orders_wrap .orders_title{
  padding: 20rpx;
  border-bottom: 1rpx solid #cccccc;
}

.user_content .user_main .orders_wrap .orders_content{
  display: flex;
}

.user_content .user_main .orders_wrap .orders_content navigator{
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
}

.user_content .user_main .orders_wrap .orders_content navigator .iconfont{
  color: var(--themeColor);
}

.user_content .user_main .address_wrap{
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}

.user_content .user_main .app_info_wrap{
  margin-top: 30rpx;
  background-color: #fff;
}

.user_content .user_main .app_info_wrap .app_info_item{
  padding: 20rpx;
  border-bottom: 2rpx solid #cccccc;
}

.user_content .user_main .recommend_wrap{
  padding: 20rpx;
  margin-top: 30rpx;
  background-color: #fff;
}